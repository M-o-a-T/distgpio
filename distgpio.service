[Unit]
Description=DistKV GPIO server
After=serf.service
Wants=serf.service
Conflicts=distkv-recover.service
OnFailure=distkv-recover.service

ConditionFileNotEmpty=/etc/distkv.cfg

[Install]
WantedBy=multi-user.target

[Service]
Type=notify
ExecStart=/usr/bin/distkv client gpio monitor $NAME

User=distkv
Group=distkv

EnvironmentFile=/usr/lib/distkv/env
EnvironmentFile=-/etc/distkv.env

TimeoutSec=300
WatchdogSec=10
